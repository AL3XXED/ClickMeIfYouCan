<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClickMe.ViewModels"
             x:Class="ClickMe.Views.SpielPage"
             x:DataType="vm:SpielViewModel">

    <ContentPage.BindingContext>
        <vm:SpielViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">

        <Label Text="âŒ›" Grid.Row="0" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" FontSize="18"/>
        <Label Text="{Binding Zeit}" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center" FontSize="18" Margin="30,0,0,0"/>

        <Label Text="ðŸ’Ž" Grid.Row="0" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" FontSize="18"/>
        <Label Text="{Binding Punkte}" Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" FontSize="18" Margin="30,0,0,0"/>

        <AbsoluteLayout>
            <AbsoluteLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="Bewegung"/>
            </AbsoluteLayout.GestureRecognizers>

            <Button 
        Text="Click me"
        Command="{Binding TapCommand}"
        CommandParameter="{Binding Source={RelativeSource Self}, Path=Bounds.Location}"
        WidthRequest="100"
        HeightRequest="50"
        TranslationX="{Binding ButtonX}"
        TranslationY="{Binding ButtonY}"
        AbsoluteLayout.LayoutBounds="0,0,AutoSize,AutoSize"
        CornerRadius="12"
        FontAttributes="Bold"
        />
        </AbsoluteLayout>

    </Grid>

</ContentPage>