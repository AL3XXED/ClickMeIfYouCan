<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClickMe.ViewModels"
             x:Class="ClickMe.Views.SpielPage"
             x:DataType="vm:SpielViewModel">

    <ContentPage.BindingContext>
        <vm:SpielViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Label x:Name="PunkteLabel"
               Text="Punkte: 0"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Margin="20"
               FontSize="24"
               TextColor="DarkGreen"/>

        <Label x:Name="CountdownLabel"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="64"
               TextColor="Red" />

        <AbsoluteLayout x:Name="Spielfeld">
            <Ellipse x:Name="SpielForm"
                     WidthRequest="80"
                     HeightRequest="80"
                     Fill="Blue">
                <Ellipse.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFormTapped" />
                    <PointerGestureRecognizer PointerEntered="OnPointerNear" />
                </Ellipse.GestureRecognizers>
            </Ellipse>
        </AbsoluteLayout>
    </Grid>
</ContentPage>