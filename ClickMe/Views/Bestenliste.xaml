<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:vm="clr-namespace:ClickMe.ViewModels"  
            x:Class="ClickMe.Views.Bestenliste"  
            Title="Bestenliste">


    <CollectionView ItemsSource="{Binding BestenlisteObservable}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10"  >
                    <Label Text="{Binding SpielerName}" FontSize="18" VerticalOptions="Center" />
                    <Label Text="{Binding Punkte}" FontSize="14" TextColor="Gray" VerticalOptions="Center" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>